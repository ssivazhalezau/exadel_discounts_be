@model Exadel.CrazyPrice.IdentityServer.ViewModels.LogoutViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="logout-page">
    <div class="lead">
        <h1>@Localizer["Logout"]</h1>
        <p>@Localizer["Loguot_quest"]</p>
    </div>

    <form asp-action="Logout">
        <input type="hidden" name="logoutId" value="@Model.LogoutId" />
        <div class="form-group">
            <button class="btn btn-primary">@Localizer["Yes"]</button>
        </div>
    </form>
</div>
