{
  "Database": {
    "ConnectionStrings": {
      "DefaultConnection": "mongodb://mongo:27017/?readPreference=primary&appname=CrazyPrice.WebApi&ssl=false",
      "Database": "CrazyPriceDb"
    }
  },
  "LogToSerilog": true,
  "LogToNLog": true,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "%BASEDIR%/Logs/serilog-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "shared": true,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Properties": {
      "Application": "Exadel"
    }
  },
  "Certificate": {
    "Name": "sts_dev_cert.pfx",
    "Password": "1234"
  },
  "AuthConfiguration": {
    "IdentityServerUrl": "https://identity-server:443",
    "ClientUrl": "https://localhost:44357"
  },
  "Localization": {
    "Default": "ru"
  }
}
